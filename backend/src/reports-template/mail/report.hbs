<h3>Hardware Inventory Summary</h3>
<table border="1" style="border-collapse: collapse; width: 100%;">
  <thead style="background-color: #33CC80; color: #ECF9F9;">
    <tr>
      <th style="min-width: 50px; padding: 4px 8px;">Category</th>
      {{#each statuses}}
      <th style="min-width: 50px; padding: 4px 8px;">{{this}}</th>
      {{/each}}
      <th style="min-width: 50px; padding: 4px 8px;">Total</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories as |category|}}
    <tr>
      <td style="padding: 4px 8px;">{{category}}</td>
      {{#each ../statuses as |status|}}
      <td style="text-align: center; padding: 4px 8px;">{{lookup (lookup ../../hardwareAssets category) this}}</td>
      {{/each}}
      <td style="text-align: center; padding: 4px 8px;">{{lookup (lookup ../hardwareAssets category) 'Total'}}</td>
    </tr>
    {{/each}}
    <tr style="background-color: #F0F0F0;">
      <td style="padding: 4px 8px;">Total per Status</td>
      {{#each statuses as |status|}}
      <td style="text-align: center; padding: 4px 8px;">{{lookup (lookup ../hardwareAssets 'Total per Status') status}}
      </td>
      {{/each}}
      <td style="text-align: center; padding: 4px 8px;">{{lookup (lookup hardwareAssets 'Total per Status') 'Total'}}
      </td>
    </tr>
  </tbody>
</table>
<h3>Latest Assets Added</h3>
<table border="1" style="border-collapse: collapse; width: 100%;">
  <thead style="background-color: #33CC80; color: #ECF9F9;">
    <tr>
      <th style="min-width: 100px; padding: 4px 8px;">Code</th>
      <th style="min-width: 100px; padding: 4px 8px;">Category</th>
      <th style="min-width: 100px; padding: 4px 8px;">Model Name</th>
      <th style="min-width: 100px; padding: 4px 8px;">Serial Number</th>
      <th style="min-width: 100px; padding: 4px 8px;">Added By</th>
      <th style="min-width: 100px; padding: 4px 8px;">Date</th>
      <th style="min-width: 100px; padding: 4px 8px;">Time</th>
    </tr>
  </thead>
  <tbody>
    {{#if latestAssets.length}}
    {{#each latestAssets}}
    <tr>
      <td style="padding: 4px 8px;">{{this.code}}</td>
      <td style="padding: 4px 8px;">{{this.category}}</td>
      <td style="padding: 4px 8px;">{{this.modelName}}</td>
      <td style="padding: 4px 8px;">{{this.serialNo}}</td>
      <td style="padding: 4px 8px;">{{this.createdBy}}</td>
      <td style="padding: 4px 8px; text-align: right;">{{this.date}}</td>
      <td style="padding: 4px 8px; text-align: right;">{{this.time}}</td>
    </tr>
    {{/each}}
    {{else}}
    <tr>
      <td style="padding: 4px 8px; text-align: center" colspan="7">- No assets have been recently added -</td>
    </tr>
    {{/if}}
  </tbody>
</table>
<h3>Actions Required</h3>
<ul>
  {{#each assetCounters}}
  <li>Asset <span style="font-weight: bold">{{this.type}} - {{this.category}}</span> is depleting. Remaining asset
    count: {{this.totalCount}}</li>
  {{/each}}
</ul>
